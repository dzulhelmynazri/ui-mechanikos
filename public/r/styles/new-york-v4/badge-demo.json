  "files": [
    {
      "path": "registry/new-york-v4/examples/badge-demo.tsx",
      "content": "import { Activity, X } from \"lucide-react\"\n\nimport { Badge, BadgeButton, BadgeDot } from \"@/registry/new-york-v4/ui/badge\"\n\nexport default function BadgeDemo() {\n  return (\n    <div className=\"flex flex-col items-center gap-2\">\n      <div className=\"flex w-full flex-wrap gap-2\">\n        <Badge>Primary</Badge>\n        <Badge variant=\"outline\">Outline</Badge>\n        <Badge variant=\"destructive\">Destructive</Badge>\n        <Badge variant=\"info\">Info</Badge>\n        <Badge variant=\"success\" appearance=\"outline\">\n          <BadgeDot /> Outline\n        </Badge>\n      </div>\n      <div className=\"flex w-full flex-wrap gap-2\">\n        <Badge variant=\"primary\" appearance=\"light\">\n          <Activity /> light\n        </Badge>\n        <Badge variant=\"secondary\">\n          Solid\n          <BadgeButton>\n            <X />\n          </BadgeButton>\n        </Badge>\n        <Badge variant=\"info\" appearance=\"outline\" shape=\"circle\">\n          5\n        </Badge>\n        <Badge variant=\"outline\" appearance=\"outline\" shape=\"circle\">\n          50+\n        </Badge>\n        <Badge variant=\"primary\" disabled>\n          Solid\n        </Badge>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:example"
    }
  ]
}